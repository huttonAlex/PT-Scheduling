# Application name for identification
spring.application.name=ptSchedule

# Database connection properties
spring.datasource.url=jdbc:mysql://192.168.6.3:3306/fitness_db_test?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
